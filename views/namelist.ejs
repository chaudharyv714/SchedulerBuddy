<%- include("header.ejs")%>
    <div id="listCon">
        <h1>Lists</h1>
        <% for(var i=0;i<namelist.length;i++){%>
            <div class="listBox">
                <a href="/<%=namelist[i].name%>">
                    <h2>
                        <%=namelist[i].name%>
                    </h2>
                </a>

                <div class="listdetails">
                    <a href="#" class="trigger" id="trigBtn<%=i%>">&#10247</a>


                </div>

                <div id="desModal<%=i%>" class="modal">
                    <div class="modal-content">
                        <span class="close" id="close<%=i%>">&times;</span>
                        <div class="desDiv">
                            <h1>Task Details</h1>
                            <div class="desDivChild">Title:&nbsp;&nbsp;<%=namelist[i].name%>
                            </div>
                            <div class="desDivChild">No. of tasks:&nbsp;&nbsp;<%=namelist[i].items.length%>
                            </div>
                            <div class="desDivChild ">List ID:&nbsp;&nbsp;<%=namelist[i]._id%>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <%}%>


    </div>

    <button id="addtaskbutton">Add List</button>

    <div id="addtaskModal" class="modal">
        <div class="modal-content">
            <span class="close" id="formclose">&times;</span>
            <div id="formCon">
                <form action="/namelist" method="post">
                    <label for="title">Title</label>
                    <input type="text" name="title">
                    <button type="submit">Add List</button>
                </form>
            </div>
        </div>

    </div>

<%- include("footer.ejs")%>